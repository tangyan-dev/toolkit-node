{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strict": true,
        "alwaysStrict": true,
        "target": "ES2020",
        "module": "es2020",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "lib": ["es2020"],
        "sourceMap": false
    },
    "exclude": ["./cli-plugin-*"],
}